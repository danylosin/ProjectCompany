@model ProjectCompany.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Creating new employee";
    Layout = "Layout";
}

<div class="col-xl-12">
    <form asp-action="Create" asp-controller="Employee" method="Post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control" type="text" asp-for="Name" placeholder="Enter a name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select class="form-control" asp-for="SelectedSkills" asp-items="Model.Skills">
            </select>
        </div>
        <div>
            <input class="btn btn-primary" type="submit" value="Save" />
        </div>
    </form>
</div>
