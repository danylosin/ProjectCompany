@model ProjectCompany.Models.Project;

@{
    ViewData["Title"] = "Creating new project";
    Layout = "Layout";
}

<div class="col-xl-12">
    <form asp-action="Create" asp-controller="Project" method="Post">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input class="form-control" type="text" asp-for="Title" placeholder="Enter a title">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DatePeriod.From">Date From</label>
            <input class="form-control" type="date" asp-for="DatePeriod.From" placeholder="Enter a title">
            <span asp-validation-for="DatePeriod.From" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DatePeriod.To">Date To</label>
            <input class="form-control" type="date" asp-for="DatePeriod.To" placeholder="Enter a title">
            <span asp-validation-for="DatePeriod.To" class="text-danger"></span>
        </div>
        <div>
            <input class="btn btn-primary" type="submit" value="Save" />
        </div>
    </form>
</div>